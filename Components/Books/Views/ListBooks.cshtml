@model List<WebMVC_SWD.Components.Books.Models.Book>

<h2>All Books</h2>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Author</th>
            <th>Price</th>
            <th>Stock</th>
            <th>ISBN</th>
            <th>Publisher</th>
            <th>Publication Year</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>@book.Price?.ToString("C")</td>
                    <td>@book.Stock</td>
                    <td>@book.Isbn</td>
                    <td>@book.Publisher</td>
                    <td>@book.PublicationYear</td>
                    <td>@book.Category?.Name</td>
                    <td>
                        <a href="/Book/Update/@book.BookId">Update</a> |
                        <a href="javascript:void(0);" onclick="confirmDelete(@book.BookId)">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="10">No books available.</td></tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this book?")) {
            window.location.href = '/Book/Delete/' + id;
        }
    }
</script>
