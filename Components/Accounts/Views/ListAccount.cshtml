@model List<WebMVC_SWD.Components.Accounts.Models.Account>

<h2>All Accounts</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.UserId</td>
                <td>@account.Username</td>
                <td>@account.Name</td>
                <td>@account.Email</td>
                <td>
                    @(account.IsDisabled ? "Disabled" : "Active")
                </td>
                <td>
                    <form method="post" asp-action="ToggleDisable" asp-controller="Account" asp-route-id="@account.UserId">
                        <button type="submit" class="btn btn-warning">
                            @(account.IsDisabled ? "Enable" : "Disable")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
